@model ShopWebsite.Data.Product
@{
    ViewData["Title"] = "Product List Page";
}

<div class="text-center">
    
    <p>@TempData["ResultMessage"]</p>
</div>

<div class="container">
    <div class="row">
        <div class="col-5">
            <img src="/img/@Model.Image" style="max-height:300px;">
        </div>
        <div class="col-7">
            <dl class="row">
                <dt class="col-sm-3">商品名稱</dt>
                <dd class="col-sm-9">@Model.Name</dd>
                <dt class="col-sm-3">商品簡介</dt>
                <dd class="col-sm-9">@Model.Description</dd>
                <dt class="col-sm-3">商品價格</dt>
                <dd class="col-sm-9">@Model.Price</dd>
                <dt class="col-sm-3">商品庫存</dt>
                <dd class="col-sm-9">@Model.Stock</dd>
                <dd class="col-sm-12">
                    <dl>
                        <dt>
                            @Html.ActionLink("編輯","EditProduct",new {id=Model.Id}) |
                            @Html.ActionLink("刪除","DeleteProduct",new {id=Model.Id}) |
                            @Html.ActionLink("返回","ProductList")
                        </dt>
                    </dl>
                </dd>
                <div>

                </div>
            </dl>
        </div>
    </div>
    <div class="row">
        <div class="col-12">
            <dl>
                <hr>
                <dt>商品內容</dt>
                <dd>@Html.Raw(Model.Content)</dd>
            </dl>
        </div>
    </div>
</div>